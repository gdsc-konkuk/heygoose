{
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*", "test/**/*", "www/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noEmit": true
  }
}
